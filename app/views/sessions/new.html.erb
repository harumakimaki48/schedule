<div class="flex justify-center items-center h-screen">
<div class="w-full max-w-xs">
    <%= form_with url: login_path, local: true, class: "bg-gray-100 shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
      <div class="text-center mb-8">
      <div class="flex justify-center items-center">
      <i class="fas fa-pencil-alt text-6xl text-blue-600"></i>
    </div>
    <h1 class="text-5xl font-bold text-gray-800 mt-2">夢のメモ書き</h1>
    <p class="text-base text-gray-600">ディズニーを楽しむためのアプリ</p> 
    </div>
    
      <h1 class="text-center text-2xl mb-4"></h1>

      <div class="mb-4">
        <%= f.label :email, 'メールアドレス', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "メールアドレスを入力" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, 'パスワード', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "パスワードを入力" %>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit 'ログイン', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="text-center mt-4">
  <%= link_to 'LINEでログイン', '/auth/line', class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded", data: { turbo: false } %>
</div>

  <div class="text-center mt-4">
      <%= link_to '新規アカウント作成', new_user_path, class: "text-blue-500 hover:text-blue-700 font-bold" %>
  </div>

  <div class="text-center mt-4">
      <%= link_to 'アプリの使い方を見る', how_to_use_path, class: "text-blue-500 hover:text-blue-700 font-bold" %>
  </div>

    <% end %>
  </div>
</div>

