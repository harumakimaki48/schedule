<div class="max-w-screen-md mx-auto bg-gray-100 p-6 rounded-lg">

  <!-- ヘッダー部分：SHOP情報一覧とハンバーガーメニュー -->
  <div class="flex justify-between items-center px-4 py-2 bg-gray-200">
    <h1 class="text-lg font-bold mx-auto">
      SHOP情報一覧
    </h1>
    <!-- ハンバーガーメニュー -->
    <div>
      <button class="text-gray-600 focus:outline-none">
        <i class="fas fa-bars"></i>
      </button>
    </div>
  </div>

  <!-- Shop追加ボタン -->
  <div class="flex justify-end mt-4">
    <%= link_to 'Shop追加', new_shop_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Shop一覧 -->
  <div class="shop-list mt-4">
    <table class="min-w-full bg-white border-collapse">
      <thead>
        <tr>
          <th class="border px-4 py-2">Shop Name</th>
          <th class="border px-4 py-2">Area</th>
          <th class="border px-4 py-2">Image</th>
        </tr>
      </thead>
      <tbody>
        <% if @shops.present? %>
          <% @shops.each do |shop| %>
            <tr>
              <!-- Shop NameをリンクにしてEdit画面へ遷移 -->
              <td class="border px-4 py-2 text-center">
                <%= link_to shop.shop_name, edit_shop_path(shop), class: "text-blue-500 hover:text-blue-700 underline" %>
              </td>
              <!-- Area名を表示 -->
              <td class="border px-4 py-2 text-center"><%= shop.area.area_name %></td>
              <td class="border px-4 py-2 text-center"><%= image_tag shop.shop_image if shop.shop_image.attached? %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td class="border px-4 py-2 text-center" colspan="3">No Shops available</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
