  <div class="flex justify-center items-center h-screen">
  <div class="w-full max-w-xs">
    <%= form_with url: login_room_path, local: true, class: "bg-gray-100 shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>

      <h1 class="text-center text-2xl mb-4">部屋番号</h1>

      <div class="mb-4">
        <%= f.label :room_number, '部屋番号', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :room_number, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "部屋番号を入力" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, 'パスワード', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "パスワードを入力" %>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit '部屋に入る', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="text-center mt-4">
        <%= link_to '部屋を作成', new_room_path, class: "text-blue-500 hover:text-blue-700 font-bold" %>
    </div>
    <div class="text-center mt-4">
      <%= link_to 'ログインはこちら', login_path, class: "text-blue-500 hover:text-blue-700 font-bold" %>
    </div>

    <% end %>

    
  </div>
</div>